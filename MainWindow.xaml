<Window x:Class="Magazyn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Magazyn"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <CollectionViewSource x:Key="categoryViewSource"/>
        <CollectionViewSource x:Key="categoryToolsViewSource"
                              Source="{Binding Tools, Source={StaticResource categoryViewSource}}"/>
    </Window.Resources>
    <DataGrid x:Name="categoryDataGrid" AutoGenerateColumns="False"
              EnableRowVirtualization="True"
              ItemsSource="{Binding Source={StaticResource categoryViewSource}}"
              Margin="13,13,43,229" RowDetailsVisibilityMode="VisibleWhenSelected">
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding CategoryId}"
                                Header="Category Id" Width="SizeToHeader"
                                IsReadOnly="True"/>
            <DataGridTextColumn Binding="{Binding CategoryName}" Header="Name"
                                Width="*"/>
        </DataGrid.Columns>
    </DataGrid>
</Window>
